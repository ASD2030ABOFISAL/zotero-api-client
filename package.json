{
  "name": "zotero-api-client",
  "version": "0.36.0",
  "description": "A lightweight, minimalistic Zotero API client",
  "repository": "https://github.com/tnajdek/zotero-api-client.git",
  "main": "src/main.js",
  "umd:main": "dist/zotero-api-client.js",
  "unpkg": "dist/zotero-api-client.js",
  "author": "Tom Najdek",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">= 10.0.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "readme": "jsdoc2md --template docs/README.md --no-cache --configure .jsdoc.json src/*.js > README.md",
    "test": "c8 mocha",
    "coverage": "c8 --reporter=html --reporter=text mocha",
    "coveralls": "c8 report --reporter=text-lcov | coveralls",
    "test-watch": "mocha -w",
    "prepack": "npm run build",
    "postpack": "npm run clean",
    "lint": "eslint \"src/*.js\" || true",
    "clean": "rimraf dist",
    "build": "rimraf dist/* && npm run browserify",
    "browserify": "mkdir -p dist/ && NODE_ENV=production browserify -s zoteroApiClient -d src/main.js -t [babelify] -g [ envify --NODE_ENV production ] | terser --compress --mangle > dist/zotero-api-client.js",
    "start": "mocha -w"
  },
  "files": [
    "dist/*.js",
    "src/*.js"
  ],
  "dependencies": {
    "cross-fetch": "^3.1.4",
    "spark-md5": "^3.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/eslint-parser": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "c8": "^7.7.2",
    "chai": "^4.3.4",
    "coveralls": "^3.1.0",
    "envify": "^4.1.0",
    "eslint": "^7.26.0",
    "fetch-mock": "^9.11.0",
    "jasmine-core": "^3.7.1",
    "jsdoc-strip-async-await": "^0.1.0",
    "jsdoc-to-markdown": "^7.0.1",
    "mocha": "^8.4.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "terser": "^5.7.0"
  }
}
