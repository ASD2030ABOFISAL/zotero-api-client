{
  "name": "zotero-api-client",
  "version": "0.10.0",
  "description": "A lightweight, minimalistic Zotero API client",
  "repository": "https://github.com/tnajdek/zotero-api-client.git",
  "main": "lib/api.js",
  "author": "Tom Najdek",
  "license": "AGPL-3.0",
  "scripts": {
    "readme": "jsdoc2md --template docs/README.md --no-cache --configure .jsdoc.json src/*.js > README.md",
    "test": "nyc mocha --compilers js:babel-register",
    "coverage": "nyc --reporter=html --reporter=text mocha --compilers js:babel-register",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test-watch": "mocha -w --compilers js:babel-register",
    "prepack": "npm run build",
    "postpack": "rimraf lib && rimraf build",
    "build": "rimraf lib/* && rimraf build/* && run-p build:browser build:node",
    "build:node": "mkdir -p lib/ && cd src && babel *.js -d ../lib",
    "build:browser": "mkdir -p build/ && NODE_ENV=browser browserify -s zoteroApiClient -d src/api.js -t [babelify] -o build/zotero-api-client.js",
    "start": "mocha -w --compilers js:babel-register"
  },
  "files": [
    "build/*.js",
    "lib/*.js"
  ],
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "js-md5": "^0.7.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-babili": "^0.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "babelify": "^8.0.0",
    "browserify": "^15.2.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "fetch-mock": "^6.0.0",
    "jasmine-core": "^2.9.1",
    "jsdoc-strip-async-await": "^0.1.0",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^5.0.0",
    "mockery": "^2.1.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2"
  }
}
